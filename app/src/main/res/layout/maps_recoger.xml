<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".recogerControlador" />

    <Button
        android:id="@+id/BotRecoger"
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="Recoger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Textband"
        app:layout_constraintStart_toStartOf="@+id/Textband"
        app:layout_constraintTop_toBottomOf="@+id/Textband" />

    <TextView
        android:id="@+id/Textband"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="594dp"
        android:layout_marginBottom="14dp"
        android:padding="5dp"
        android:shadowColor="#cf1d1d"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:text="Numero de caches recogidos : "
        android:textColor="#cf1d1d"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/BotRecoger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>